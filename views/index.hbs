<div class="container">

    <h1>{{title}}</h1>

    <div class="row justify-content-between">

        {{#if username}}
        <p class="col-12">Bienvenido {{username}}</p>
        <a href="/students" class="col-4">See all students</a>
        <a href="/courses" class="col-4">See all courses</a>
        <a href="/logout" class="col-4">Log out</a>
        {{else}}
        <a href="/login" class="col-4">Log in</a>
        <a href="/signup" class="col-4">Sign up</a>
        {{/if}}

        {{#if errorMsg}}
        <p class="errorMsg">{{errorMsg}}</p>
        {{/if}}

    </div>
</div>