<div class="container">

    <h2>Courses</h2>

    <a href="/">Go back</a>
    {{#if this.isTA}}
    <a href="/courses/create">Create a new course</a>
    {{/if}}

    <ul class="row gy-2">

        {{#each this.courses}}
        <li class="col-12 col-sm-6 col-md-4 col-lg-3">

            <img src={{courseImg}} alt="course image">
            <p>{{title}}</p>

            <a href="/courses/{{id}}" class="btn btn-dark">View course details</a>

        </li>
        {{/each}}

    </ul>
</div>